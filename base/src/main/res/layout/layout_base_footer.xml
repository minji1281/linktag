<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFooter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout style="@style/common_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <ImageButton
            android:id="@+id/btnFooterHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:src="@drawable/selector_footer_home"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnFooterBoard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:src="@drawable/selector_footer_board"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnFooterScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/footer_scan"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnFooterMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:src="@drawable/selector_footer_menu"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnFooterMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:src="@drawable/selector_footer_member"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnFooterSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:contentDescription="@null"
            android:src="@drawable/selector_footer_setting"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>