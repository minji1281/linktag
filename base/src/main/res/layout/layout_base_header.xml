<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <!--왼쪽-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnHeaderLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:contentDescription="@null"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/selector_base_header_btn_back" />

            <Button
                android:id="@+id/btnHeaderLeftText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/common_cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvHeaderTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Title2"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_smaller"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <!--가운데 타이틀-->

        <!--오른쪽-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <Spinner
                android:id="@+id/spHeaderRight"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/spinner_background"
                android:padding="0dp"
                android:popupBackground="@color/colorAccent"
                android:visibility="gone"
                tools:visibility="gone" />

            <ImageButton
                android:id="@+id/btnHeaderRight2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/btn_noti_off_gray"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/btnHeaderRight1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/btn_setting_gray"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/common_save"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout style="@style/common_horizontal_line" />

</LinearLayout>