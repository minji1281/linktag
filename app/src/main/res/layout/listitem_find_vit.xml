<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutVit"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvVitRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_normal"
        android:textColor="#9ab7ff" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/listitem_text2" />

    <TextView
        android:id="@+id/tvVitName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/listitem_text1"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/tvVitPer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/listitem_text3"
        android:textSize="@dimen/text_normal" />

</LinearLayout>