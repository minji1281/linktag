<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F7"
    android:orientation="vertical"
    tools:context=".ui.main.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#12C7E0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/btn_cancel_white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="9"
            android:gravity="right|center_vertical"
            android:text="관리자님 안녕하세요."
            android:textSize="@dimen/text_big" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenuTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tvMenuService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_home_selected"
            android:gravity="center"
            android:text="서비스"
            android:textColor="@drawable/selector_main_tab_text"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tvMenuShared"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_work"
            android:gravity="center"
            android:text="공유"
            android:textColor="@drawable/selector_main_tab_text"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tvMenuMember"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_apply"
            android:gravity="center"
            android:text="멤버"
            android:textColor="@drawable/selector_main_tab_text"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tvMenuSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_setting"
            android:gravity="center"
            android:text="설정"
            android:textColor="@drawable/selector_main_tab_text"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <com.linktag.base.base_view_pager.BaseViewPager
        android:id="@+id/viewPagerMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>