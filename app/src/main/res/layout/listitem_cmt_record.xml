<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/shape_base_border"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/imgUserPhoto"-->
<!--            android:layout_width="65dp"-->
<!--            android:layout_height="65dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:background="@drawable/shape_round"-->
<!--            android:src="@drawable/main_profile_no_image" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:layout_weight="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    tools:text="홍길동" />

                <ImageButton
                    android:id="@+id/btnMove"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/delete"
                    android:background="@android:color/transparent"
                    android:scaleType="fitEnd">
                </ImageButton>

                <TextView
                    android:id="@+id/hidd_gubun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/hidd_CMT_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/hidd_CMT_97"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:background="#4682B4" />


            <TextView
                android:layout_weight="5"
                android:id="@+id/tvWorkType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:maxLines="4"
                android:textSize="@dimen/text_small"
                android:scrollbars = "vertical"
                tools:text="개발부 사원" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                    tools:text="10:18" />

                <TextView
                    android:id="@+id/tvWorkDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                    tools:text="10:18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:maxWidth="30dp"
                    android:src="@drawable/dashboard"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:scaleType="fitEnd">
                </ImageView>

                <TextView
                    android:id="@+id/tvWorkState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:minWidth="80dp"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:textColor="#00BAF7"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"
                    tools:text="근무중" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>