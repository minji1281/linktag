<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings_profile.ProfileMain">

    <com.linktag.base.base_header.BaseHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="프로필 설정" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <!-- 프로필 사진 -->

            <LinearLayout
                android:id="@+id/layoutPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/imgProfilePhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_round"
                        android:src="@drawable/main_profile_no_image" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:scaleType="fitCenter"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/icon_camera" />

                </FrameLayout>

            </LinearLayout>


            <!-- 이메일 -->
            <LinearLayout
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/tvChangeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_color"
                    android:gravity="center_vertical"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="pengsu@ebs.co.kr"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 가입일 -->

            <LinearLayout
                style="@style/common_horizontal_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutSignDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가입일"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/tvSignDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_color"
                    android:gravity="center_vertical"
                    android:hint="가입일"
                    android:maxLength="50"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="2000. 01. 01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                style="@style/common_horizontal_line"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="비밀번호"
                        android:textSize="@dimen/text_small" />

                    <Button
                        android:id="@+id/btnChangePwd"
                        style="@style/common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="변경"
                        android:textSize="@dimen/text_smaller" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutChangePwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical">


                        <EditText
                            android:id="@+id/etOldPwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="20"
                            android:hint="기존 비밀번호를 입력해 주세요"
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_smaller" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical">


                        <EditText
                            android:id="@+id/etNewPwd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="20"
                            android:hint="새 비밀번호를 입력해주세요."
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_smaller" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical">


                        <EditText
                            android:id="@+id/etNewPwd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="20"
                            android:hint="새 비밀번호를 한번 더 확인해주세요."
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_smaller" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical">


                        <Button
                            android:id="@+id/btnSubmitPwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_red_light"
                            android:text="확인"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_smaller" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/common_horizontal_line"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="@dimen/text_small" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_color"
                    android:gravity="center_vertical"
                    android:hint="이름"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text="펭수"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout style="@style/common_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대전화 번호"
                    android:textSize="@dimen/text_small" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_color"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:text="010-1234-5678"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout style="@style/common_horizontal_line" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>