<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/list_round_shape"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="5dp">

            <ImageView
                android:id="@+id/AlarmIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                app:srcCompat="@drawable/alarm_state_on" />

            <ImageView
                android:id="@+id/PotIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                app:srcCompat="@drawable/ic_pot" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:gravity="center_vertical|center"
            tools:text="장미"/>

        <TextView
            android:id="@+id/tvDDAY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center_vertical|center"
            tools:text="D+3" />

        <Button
            android:id="@+id/btnWater"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@drawable/btn_round_water"
            android:text="물주기"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
