<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 인바디 앱 접근 권한 안내 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="앱 접근 권한 안내"
        android:textColor="@color/black"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />

    <!-- 설명 -->
    <TextView
        style="@style/common_description"
        android:text="앱을 사용하기 위해선 아래와 같은 권한을 필요로 합니다." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <!-- 접근 권한 -->

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접근 권한"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <!-- 사진 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(필수)"
                    android:textColor="#2196f3"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="사진"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 설정을 위한 갤러리에 접근하기 위해 사용"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/text_smaller" />

            <!-- 카메라 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(필수)"
                    android:textColor="#2196f3"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="카메라"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 설정을 위한 카메라에 접근하기 위해 사용"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/text_smaller" />

            <!-- 위치 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(필수)"
                    android:textColor="#2196f3"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="위치"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 확인을 하기 위해 사용"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/text_smaller" />

            <!-- 접근 권한 변경 방법 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="접근 권한 변경 방법"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="휴대폰 설정 > 앱 > 권한에서 각 접근 권한을 변경할 수 있습니다."
                android:textColor="#333333"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="위 접근 권한에 동의하지 않을 경우 앱 사용이 제한 됩니다."
                android:textColor="#2196f3"
                android:textSize="@dimen/text_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#c0ffffff"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnConfirm"
                style="@style/common_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:text="@string/common_confirm" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>